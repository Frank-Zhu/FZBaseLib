<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="FZBaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/gary_primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowActionBarOverlay">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarItemBackground">@null</item>
        <item name="android:windowBackground">@color/window_back_ground</item>
        <item name="android:actionModeCloseDrawable">@mipmap/ic_action_bar_close</item>
        <item name="android:textColorPrimary">@color/title_color</item>
        <item name="actionBarPopupTheme">@style/FZBaseAppTheme.PopupTheme</item>
        <item name="actionMenuTextColor">@color/title_color</item>
        <item name="android:listDivider">@mipmap/ic_list_divider</item>
        <item name="colorControlNormal">@color/title_color</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="alertDialogTheme">@style/FZBaseAppTheme.AlertDialogStyle</item>
        <item name="android:alertDialogTheme">@style/FZBaseAppTheme.AlertDialogStyle</item>
    </style>

    <style name="FZBaseAppTheme.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="colorControlNormal">@color/primary_text_color</item>
        <item name="android:textColorPrimary">@color/menu_text_color</item>
    </style>

    <style name="FZBaseAppTheme.ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/gary_primary</item>
        <item name="colorPrimaryDark">@color/gary_primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/title_color</item>
        <item name="actionMenuTextColor">@color/title_color</item>
        <item name="android:actionModeCloseDrawable">@mipmap/ic_action_bar_close</item>
        <item name="colorControlNormal">@color/title_color</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:listDivider">@mipmap/ic_list_divider</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="alertDialogTheme">@style/FZBaseAppTheme.AlertDialogStyle</item>
        <item name="android:alertDialogTheme">@style/FZBaseAppTheme.AlertDialogStyle</item>
    </style>

    <style name="FZBaseAppTheme.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="FZBaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="FZBaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FZBaseAppTheme.MatchActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="FZBaseAppTheme.WarpActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="FZBaseAppTheme.WarpViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FZBaseAppTheme.MatchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--      标题风格               -->
    <style name="FZBaseAppTheme.TitleTextStyle" parent="FZBaseAppTheme.WarpViewStyle">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <!--      正文一级标题风格               -->
    <style name="FZBaseAppTheme.NormalTextStyle" parent="FZBaseAppTheme.WarpViewStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <!--      正文二级标题风格               -->
    <style name="FZBaseAppTheme.SecondaryTextStyle" parent="FZBaseAppTheme.WarpViewStyle">
        <item name="android:textSize">@dimen/second_text_size</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <!--      普通按钮不带间距风格               -->
    <style name="FZBaseAppTheme.NormalButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:theme">@style/FZBaseAppTheme.ButtonTheme</item>
    </style>

    <style name="FZBaseAppTheme.ButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="FZBaseAppTheme.WhiteButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <!--      普通按钮带间距风格               -->
    <style name="FZBaseAppTheme.NormalButtonMarginStyle" parent="FZBaseAppTheme.NormalButtonStyle">
        <item name="android:layout_margin">@dimen/larger_larger_view_margin</item>
    </style>

    <!--      普通按钮不带间距风格               -->
    <style name="FZBaseAppTheme.SmallButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:theme">@style/FZBaseAppTheme.ButtonTheme</item>
        <item name="android:paddingTop">@dimen/middle_view_margin</item>
        <item name="android:paddingBottom">@dimen/middle_view_margin</item>
        <item name="android:paddingLeft">@dimen/root_view_margin</item>
        <item name="android:paddingRight">@dimen/root_view_margin</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="FZBaseAppTheme.NormalEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <!--Input field style-->
    <style name="FZBaseAppTheme.EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/hint_text_color</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <!--      波纹选择效果Item风格               -->
    <style name="FZBaseAppTheme.SelectLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/middle_view_margin</item>
        <item name="android:paddingBottom">@dimen/middle_view_margin</item>
        <item name="android:paddingLeft">@dimen/root_view_margin</item>
        <item name="android:paddingRight">@dimen/root_view_margin</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="FZBaseAppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>
</resources>